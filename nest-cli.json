{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "schematics": {
    "@nestjs/schematics:module": {
      "path": "modules/"
    },
    "@nestjs/schematics:controller": {
      "path": "modules/{{module}}/"
    },
    "@nestjs/schematics:service": {
      "path": "modules/{{module}}/"
    }
  }
}